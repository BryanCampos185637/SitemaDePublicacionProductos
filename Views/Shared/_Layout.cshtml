<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Compratodo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/misEstilos.css" rel="stylesheet" />
    <link href="~/css/alertify.bootstrap.css" rel="stylesheet" />
    <link href="~/css/simple-sidebar.css" rel="stylesheet" />
    <link href="~/css/alertify.default.css" rel="stylesheet" />
    <link href="~/css/alertify.core.css" rel="stylesheet" />
    <link href="~/css/5.1 datatables.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/menu.js"></script>
</head>
<body>
    <!--Mi sidebar-->
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light" id="sidebar-wrapper" style="border-radius:0px !important;">
            <div class="sidebar-heading" style="color: #e3e3e3 !important;">Compratodo</div>
            <div class="list-group list-group-flush" id="menuDinamico">
                <a class="list-group-item list-group-item-action text-light" asp-area="" asp-controller="Producto" asp-action="Index">Catalogo</a>
                <a class="list-group-item list-group-item-action text-light" asp-area="" asp-controller="Vendedor" asp-action="Index">Vender</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" style="position:fixed; z-index:100; width:100%;">
                <button class="btn btn-outline-dark" id="menu-toggle" style="border-radius:5px !important;"><span class="navbar-toggler-icon text-light"></span></button>
            </nav>
            <div class="container mt-5">
                <br />
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!--FIn-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/5.2 datatables.min.js.js"></script>
    <script src="~/js/alertify.min.js"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
            $("body,html").animate({
                scrollTop: "0px"
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
